<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvKycItemLayoutName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aadhar_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:fontFamily="@font/scada_regular"
        android:textSize="12sp"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvKycItemLayoutType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/borrower"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_marginEnd="@dimen/fab_margin"
            android:gravity="center_horizontal"
            android:fontFamily="@font/scada_regular"
            android:textSize="10sp"
            android:layout_toEndOf="@+id/tvKycItemLayoutAadhar"
            android:layout_toStartOf="@+id/tvKycItemLayoutFiCode"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvKycItemLayoutAadhar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aadhar_id"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_horizontal"
            android:fontFamily="@font/scada_regular"
            android:textSize="10sp"
            android:visibility="invisible"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tvKycItemLayoutFiCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loan_application_ficode"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:fontFamily="@font/scada_regular"
            android:textSize="10sp"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvKycItemLayoutDocType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_kyc_and_document"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:fontFamily="@font/scada_regular"
            android:textSize="10sp"
            android:layout_alignParentStart="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvKycItemLayoutRemarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/document_remarks"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:fontFamily="@font/scada_regular"
            android:textSize="10sp"
            android:layout_alignParentEnd="true"
            android:visibility="visible" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pbKycItemLayoutUploadStatus"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        style="@android:style/Widget.ProgressBar.Horizontal" />

</LinearLayout>
