<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvFamilyName"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Borrower Name"
                android:textColor="@color/colorPrimary"

                android:fontFamily="@font/scada_bold"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvFamilyGenderAge"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="0dp"
                android:textColor="@color/defaultTextColor"
                android:layout_height="wrap_content"
                android:text="Gender Age"
                android:fontFamily="@font/scada_regular"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/tvFamilyHealth"
                app:layout_constraintHorizontal_weight=".5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvFamilyName" />

            <TextView
                android:id="@+id/tvFamilyHealth"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Health"
                android:textColor="@color/defaultTextColor"

                android:fontFamily="@font/scada_regular"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight=".5"
                app:layout_constraintStart_toEndOf="@id/tvFamilyGenderAge"
                app:layout_constraintTop_toTopOf="@id/tvFamilyGenderAge" />

            <TextView
                android:id="@+id/tvFamilyEducation"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Education"
                android:textColor="@color/defaultTextColor"

                android:fontFamily="@font/scada_regular"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/tvFamilySchoolType"
                app:layout_constraintHorizontal_weight=".5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvFamilyHealth" />

            <TextView
                android:id="@+id/tvFamilySchoolType"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:fontFamily="@font/scada_regular"
                android:textSize="12sp"
                android:textColor="@color/defaultTextColor"

                android:text="Education Type"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight=".5"
                app:layout_constraintStart_toEndOf="@id/tvFamilyEducation"
                app:layout_constraintTop_toTopOf="@id/tvFamilyEducation" />

            <TextView
                android:id="@+id/tvFamilyBusiness"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Business"
                android:textColor="@color/defaultTextColor"

                android:fontFamily="@font/scada_regular"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/tvFamilyBusinessType"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvFamilyEducation" />

            <TextView
                android:id="@+id/tvFamilyBusinessType"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:fontFamily="@font/scada_regular"
                android:textSize="12sp"
                android:text="Business Type"
                android:textColor="@color/defaultTextColor"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvFamilyBusiness"
                app:layout_constraintTop_toTopOf="@id/tvFamilyBusiness" />

            <TextView
                android:id="@+id/tvFamilyRelationship"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Relationship"
                android:fontFamily="@font/scada_regular"
                android:textSize="12sp"

                android:textColor="@color/defaultTextColor"
                app:layout_constraintEnd_toStartOf="@+id/tvFamilyIncome"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvFamilyBusiness" />

            <TextView
                android:id="@+id/tvFamilyIncome"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_6dp"
                android:fontFamily="@font/scada_regular"
                android:gravity="end"
                android:text="Income"
                android:textColor="@color/defaultTextColor"

                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/tvFamilyIncomeType"

                app:layout_constraintStart_toEndOf="@id/tvFamilyRelationship"
                app:layout_constraintTop_toTopOf="@id/tvFamilyRelationship" />

            <TextView
                android:id="@+id/tvFamilyIncomeType"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Cash Flow"
                android:textColor="@color/defaultTextColor"

                android:fontFamily="@font/scada_regular"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvFamilyIncome"
                app:layout_constraintTop_toTopOf="@id/tvFamilyRelationship" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>